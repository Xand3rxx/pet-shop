                                                            "image": {
                                                                "type": "string",
                                                                "example": "4d469c9a-0673-4510-addd-e4a4db2d4e02"
                                                            },
                                                            "brand": {
                                                                "type": "string",
                                                                "example": "597370e5-4804-4852-bd32-29d65b3b679a"
                                                            }
                                                        },
                                                        "type": "object"
                                                    },
                                                    "uuid": {
                                                        "type": "string",
                                                        "example": "0f2de771-25dc-488d-81f6-95ba99bfebc8"
                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "example": "2022-08-09T10:25:52.000000Z"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "example": "22022-08-09T10:25:52.000000Z"
                                                    },
                                                    "id": {
                                                        "type": "number",
                                                        "example": 1
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
