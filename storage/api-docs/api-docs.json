    "paths": {
        "/api/v1/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Display all products",
                "description": "Returns products information.",
                "operationId": "listProducts",
                "responses": {
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "1 product record(s) found."
                                        },
                                        "products": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "category_uuid": {
                                                        "type": "string",
                                                        "example": "3177e824-0efb-4873-adad-6b8ab82f738c"
                                                    },
                                                    "title": {
                                                        "type": "string",
                                                        "example": "Sweet dog treats"
                                                    },
                                                    "price": {
                                                        "type": "number",
                                                        "example": 22500
                                                    },
                                                    "description": {
                                                        "type": "string",
                                                        "example": "A fantastic treat for all dog breeds."
                                                    },
                                                    "metadata": {
                                                        "description": "Product metadata",
